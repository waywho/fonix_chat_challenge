<!DOCTYPE html>
<html>
  <head>
    <title>FonixChatChallenge</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= action_cable_meta_tag %>
  </head>

  <body>

    <%= render "layouts/navbar"%>
    <section class="section">
      <div class="container">
        <% if notice.present? %>
        <div class="message is-info"><div class="message-body"><%= notice %></div></div>
        <% end %>

        <% if alert.present? || flash[:error] %>
          <div class="message is-danger"><div class="message-body"><%= alert || flash[:error] %></div></div>
        <% end %>
        <%= yield %>
      </div>
    </section>
  </body>
</html>
